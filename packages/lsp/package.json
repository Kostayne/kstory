{
	"name": "@kstory/lsp",
	"displayName": "KStory Language Support",
	"description": "Language Server Protocol support for KStory interactive fiction language",
	"author": "kostayne",
	"license": "MIT",
	"private": true,
	"version": "1.0.0",
	"icon": "icons/kstory.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/kostayne/kstory"
	},
	"publisher": "kstory",
	"categories": [
		"Programming Languages",
		"Language Packs"
	],
	"keywords": [
		"kstory",
		"interactive-fiction",
		"visual-novel",
		"story-scripting",
		"language-server",
		"lsp",
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.99.0"
	},
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./dist/lsp/client.js",
	"contributes": {
		"languages": [
			{
				"id": "kstory",
				"extensions": [".ks"],
				"configuration": "./language-configuration.json",
				"icon": {
					"light": "./icons/kstory-light.png",
					"dark": "./icons/kstory-dark.png"
				}
			}
		],
		"grammars": [
			{
				"language": "kstory",
				"scopeName": "source.kstory",
				"path": "./syntaxes/kstory.tmLanguage.json"
			}
		],
		"fileExtensions": {
			".ks": "kstory"
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run build",
		"build": "node esbuild.config.js",
		"build:watch": "node esbuild.config.js --watch",
		"build:server": "node esbuild.config.js --server",
		"build:client": "node esbuild.config.js --client",
		"lint": "biome check .",
		"lint:fix": "biome check . --write",
		"format": "biome format . --write",
		"test": "sh ./scripts/e2e.sh"
	},
	"dependencies": {
		"@kstory/core": "workspace:*"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.1",
		"@types/mocha": "^10.0.6",
		"@types/node": "^22",
		"esbuild": "^0.25.8",
		"mocha": "^10.3.0",
		"typescript": "^5.9.2"
	}
}