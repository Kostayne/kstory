{
	"compilerOptions": {
		"target": "ES2024",
		"lib": [
			"ES2024"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"strict": true,
		"outDir": "out",
		"rootDir": "../..",
		"baseUrl": "../..",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": [
		"src",
		"../../src"
	],
	"exclude": [
		"node_modules",
		"../../src/main.ts"
	]
}