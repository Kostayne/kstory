{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2024",
		"lib": [
			"ES2024"
		],
		"outDir": "dist",
		"rootDir": "src",
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["../src/*"],
			"@/ast": ["../src/ast.ts"],
			"@/lexer": ["../src/lexer.ts"],
			"@/parser": ["../src/parser.ts"],
			"@/token": ["../src/token.ts"],
			"@/tokenFactory": ["../src/tokenFactory.ts"],
			"@/validator": ["../src/validator.ts"],
			"@/utils/*": ["../src/utils/*"],
			"@/tests/*": ["../tests/*"]
		}
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		".vscode-test"
	],
	"references": [
		{
			"path": "./client"
		},
		{
			"path": "./server"
		}
	]
}