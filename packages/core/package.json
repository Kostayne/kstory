{
  "name": "@kstory/core",
  "version": "1.0.0",
  "description": "Core parser and lexer for KStory interactive fiction language",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "private": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist/",
    "README.md"
  ],
  "scripts": {
    "build": "node esbuild.config.js",
    "build:watch": "node esbuild.config.js --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "biome check src/",
    "lint:fix": "biome check src/ --write",
    "format": "biome format src/ --write",
    "prepublishOnly": "npm run test && npm run build"
  },
  "keywords": [
    "kstory",
    "parser",
    "lexer",
    "ast",
    "interactive-fiction",
    "visual-novel"
  ],
  "author": "kostayne",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kostayne/kstory"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.1",
    "@types/node": "^24.0.13",
    "esbuild": "^0.25.8",
    "typescript": "^5.9.2",
    "vitest": "^2.1.8"
  }
}
