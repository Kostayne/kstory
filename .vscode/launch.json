{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "extensionHost",
			"request": "launch",
			"name": "Launch KStory LSP Extension",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceRoot}/packages/lsp",
				"${workspaceRoot}/examples/basic-story.ks"
			],
			"outFiles": [
				"${workspaceRoot}/packages/lsp/dist/lsp/server.js",
				"${workspaceRoot}/packages/lsp/dist/lsp/client.js"
			],
			"autoAttachChildProcesses": true,
			"preLaunchTask": "compile-lsp",
			"env": {
				"VSCODE_DEBUG_MODE": "true"
			}
		},
		{
			"type": "extensionHost",
			"request": "launch",
			"name": "Launch KStory LSP Extension (Watch)",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceRoot}/packages/lsp",
				"${workspaceRoot}/examples/basic-story.ks"
			],
			"outFiles": [
				"${workspaceRoot}/packages/lsp/dist/lsp/server.js",
				"${workspaceRoot}/packages/lsp/dist/lsp/client.js"
			],
			"autoAttachChildProcesses": true,
			"preLaunchTask": "watch-lsp",
			"env": {
				"VSCODE_DEBUG_MODE": "true"
			}
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Debug LSP Server",
			"program": "${workspaceRoot}/packages/lsp/dist/lsp/server.js",
			"args": ["--stdio"],
			"cwd": "${workspaceRoot}/packages/lsp",
			"preLaunchTask": "compile-lsp",
			"env": {
				"VSCODE_DEBUG_MODE": "true"
			},
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Debug LSP Client",
			"program": "${workspaceRoot}/packages/lsp/dist/lsp/client.js",
			"cwd": "${workspaceRoot}/packages/lsp",
			"preLaunchTask": "compile-lsp",
			"env": {
				"VSCODE_DEBUG_MODE": "true"
			},
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Run Tests",
			"program": "${workspaceRoot}/node_modules/.bin/vitest",
			"args": ["run"],
			"cwd": "${workspaceRoot}",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Debug Exporter",
			"program": "${workspaceRoot}/packages/exporter/dist/index.js",
			"args": ["${workspaceRoot}/examples/basic-story.ks", "--pretty"],
			"cwd": "${workspaceRoot}",
			"preLaunchTask": "compile-exporter",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		}
	]
}
