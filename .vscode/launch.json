{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "extensionHost",
			"request": "launch",
			"name": "Launch KStory LSP Extension",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceRoot}/lsp",
				"${workspaceRoot}/lsp.ks"
			],
			"outFiles": [
				"${workspaceRoot}/dist/lsp/server.js",
				"${workspaceRoot}/dist/lsp/client.js"
			],
			"autoAttachChildProcesses": true,
			"preLaunchTask": "compile-lsp",
			"env": {
				"VSCODE_DEBUG_MODE": "true"
			}
		},
		{
			"type": "extensionHost",
			"request": "launch",
			"name": "Launch KStory LSP Extension (Watch)",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceRoot}/lsp",
				"${workspaceRoot}/lsp.ks"
			],
			"outFiles": [
				"${workspaceRoot}/dist/lsp/server.js",
				"${workspaceRoot}/dist/lsp/client.js"
			],
			"autoAttachChildProcesses": true,
			"preLaunchTask": "watch-lsp",
			"env": {
				"VSCODE_DEBUG_MODE": "true"
			}
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Debug LSP Server",
			"program": "${workspaceRoot}/dist/lsp/server.js",
			"args": ["--stdio"],
			"cwd": "${workspaceRoot}",
			"preLaunchTask": "compile-lsp",
			"env": {
				"VSCODE_DEBUG_MODE": "true"
			},
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Run Tests",
			"program": "${workspaceRoot}/node_modules/.bin/vitest",
			"args": ["run"],
			"cwd": "${workspaceRoot}",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Run Main App",
			"program": "${workspaceRoot}/node_modules/.bin/tsx",
			"args": ["src/main.ts"],
			"cwd": "${workspaceRoot}",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		}
	]
}
