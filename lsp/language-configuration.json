{
	"comments": {
		"lineComment": "#",
		"blockComment": ["/*", "*/"]
	},
	"brackets": [
		["{", "}"],
		["[", "]"],
		["(", ")"]
	],
	"autoClosingPairs": [
		{ "open": "{", "close": "}" },
		{ "open": "[", "close": "]" },
		{ "open": "(", "close": ")" },
		{ "open": "\"", "close": "\"", "notIn": ["string"] },
		{ "open": "'", "close": "'", "notIn": ["string"] }
	],
	"surroundingPairs": [
		["{", "}"],
		["[", "]"],
		["(", ")"],
		["\"", "\""],
		["'", "'"]
	],
	"indentationRules": {
		"increaseIndentPattern": "^(\\s*\\+.*|\\s*==.*|\\s*@.*|\\s*\"\\s.*)$",
		"decreaseIndentPattern": "^(\\s*->.*|\\s*=>.*)$"
	},
	"folding": {
		"markers": {
			"start": "^\\s*==\\s*",
			"end": "^\\s*==\\s*"
		}
	}
}
