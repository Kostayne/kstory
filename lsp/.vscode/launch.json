{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "extensionHost",
			"request": "launch",
			"name": "Launch KStory Extension",
			"runtimeExecutable": "${execPath}",
			"args": ["--extensionDevelopmentPath=${workspaceRoot}"],
			"outFiles": [
				"${workspaceRoot}/../dist/lsp/server.js",
				"${workspaceRoot}/../dist/lsp/client.js"
			],
			"autoAttachChildProcesses": true,
			"preLaunchTask": {
				"type": "shell",
				"command": "pnpm",
				"args": ["run", "build:lsp"]
			},
			"env": {
				"VSCODE_DEBUG_MODE": "true"
			}
		},
		{
			"type": "extensionHost",
			"request": "launch",
			"name": "Launch KStory Extension (Watch Mode)",
			"runtimeExecutable": "${execPath}",
			"args": ["--extensionDevelopmentPath=${workspaceRoot}"],
			"outFiles": [
				"${workspaceRoot}/../dist/lsp/server.js",
				"${workspaceRoot}/dist/lsp/client.js"
			],
			"autoAttachChildProcesses": true,
			"preLaunchTask": {
				"type": "shell",
				"command": "pnpm",
				"args": ["run", "build:lsp:watch"]
			},
			"env": {
				"VSCODE_DEBUG_MODE": "true"
			}
		}
	]
}
