{
  "name": "kstory",
  "version": "1.0.0",
  "description": "Interactive fiction development tools - language server and CLI exporter for .ks files",
  "author": "kostayne",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kostayne/kstory"
  },
  "keywords": [
    "interactive-fiction",
    "visual-novel", 
    "story-scripting",
    "game-development",
    "language-server",
    "cli",
    "json-export"
  ],
  "main": "packages/exporter/dist/index.js",
  "bin": {
    "kstory": "packages/exporter/dist/index.js"
  },

  "files": [
    "packages/*/dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "pnpm run build:core && pnpm run build:lsp && pnpm run build:exporter",
    "build:core": "pnpm --filter @kstory/core run build",
    "build:lsp": "pnpm --filter @kstory/lsp run build",
    "build:lsp:watch": "pnpm --filter @kstory/lsp run build:watch",
    "build:client": "pnpm --filter @kstory/lsp run build:client",
    "build:server": "pnpm --filter @kstory/lsp run build:server",
    "build:exporter": "pnpm --filter @kstory/exporter run build",
    "export": "node packages/exporter/dist/index.js",
    "lsp": "node packages/lsp/dist/lsp/server.js",
    "lsp:dev": "pnpm run build:lsp && pnpm run lsp",
    "dev": "pnpm run build:lsp:watch",
    "lint": "pnpm run lint:core && pnpm run lint:lsp && pnpm run lint:exporter",
    "lint:core": "pnpm --filter @kstory/core run lint",
    "lint:lsp": "pnpm --filter @kstory/lsp run lint",
    "lint:exporter": "pnpm --filter @kstory/exporter run lint",
    "format": "pnpm run format:core && pnpm run format:lsp && pnpm run format:exporter",
    "format:core": "pnpm --filter @kstory/core run format",
    "format:lsp": "pnpm --filter @kstory/lsp run format",
    "format:exporter": "pnpm --filter @kstory/exporter run format",
    "lint:fix": "pnpm run lint:fix:core && pnpm run lint:fix:lsp && pnpm run lint:fix:exporter",
    "lint:fix:core": "pnpm --filter @kstory/core run lint:fix",
    "lint:fix:lsp": "pnpm --filter @kstory/lsp run lint:fix",
    "lint:fix:exporter": "pnpm --filter @kstory/exporter run lint:fix",
    "test": "pnpm run test:core && pnpm run test:lsp && pnpm run test:exporter",
    "test:core": "pnpm --filter @kstory/core run test",
    "test:lsp": "pnpm --filter @kstory/lsp run test",
    "test:exporter": "pnpm --filter @kstory/exporter run test"
  },
  "dependencies": {
    "@kstory/core": "workspace:*",
    "@kstory/lsp": "workspace:*",
    "@kstory/exporter": "workspace:*"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.1",
    "@types/node": "^24.0.13",
    "esbuild": "^0.25.8",
    "tsx": "^4.19.2",
    "vitest": "^2.1.8",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.8"
  }
}