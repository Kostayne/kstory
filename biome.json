{
  "$schema": "https://biomejs.dev/schemas/2.1.1/schema.json",

  "files": {
    "ignoreUnknown": true,
    "includes": ["**", "!**/dist/**", "!**/node_modules/**"]
  },

  "formatter": {
    "enabled": false,
    "indentStyle": "space",
    "indentWidth": 2
  },

  "linter": {
    "enabled": true,
    "includes": ["**", "!**/dist/**"],

    "rules": {
      "recommended": true,
      "complexity": {
        "noExcessiveCognitiveComplexity": {
          "level": "error",
          "options": {
            "maxAllowedComplexity": 100
          }
        }
      },
      "style": {
        "useConsistentMemberAccessibility": {
          "level": "error",
          "options": {
            "accessibility": "explicit"
          }
        }
      },
      "suspicious": {
        "noConsole": "off"
      },
      "security": "warn",
      "performance": "warn",
      "correctness": {
        "useImportExtensions": "off"
      },
      "nursery": {
        "noUnresolvedImports": "off"
      }
    }
  },

  "javascript": {
    "linter": {
      "enabled": true
    },

    "formatter": {
      "enabled": true,
      "quoteStyle": "single",
      "semicolons": "always",
      "indentStyle": "space",
      "trailingCommas": "es5",
      "quoteProperties": "preserve",
      "jsxQuoteStyle": "single",
      "lineWidth": 80,
      "indentWidth": 2
    },

    "assist": {
      "enabled": true
    }
  },

  "json": {
    "formatter": {
      "enabled": false
    },

    "linter": {
      "enabled": false
    },

    "assist": {
      "enabled": false
    }
  },

  "assist": {
    "enabled": true
  }
}